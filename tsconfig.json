{
 "compilerOptions": {
   "outDir": "./dist",
   "module": "ESNext",
   "declaration": true,
   "noImplicitAny": false,
   "removeComments": true,
   "noLib": false,
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "resolveJsonModule": true,
   "esModuleInterop": true,
   "moduleResolution": "node",
   "target": "es6",
   "sourceMap": true,
   "lib": [
     "es6",
     "dom"
   ],
 },
 "include": [
   "./src"
 ],
 "exclude": [
   "dist",
   "node_modules"
 ]
}