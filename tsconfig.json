{
  "include": ["src", "types"],
  "typedocOptions": {
      "entryPoints": ["./src/index.ts"],
      "out": "docs",
      "readme": "DOCUMENTATION.md",
  },
  "compilerOptions": {
    "declaration": true,
    "importHelpers": false,
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  }
}
